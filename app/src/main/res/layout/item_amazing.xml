<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.example.mydigikala_mac.Utility.ImageView.MyImageview
        android:layout_margin="6dp"
        android:id="@+id/img_amazing_pic"
        android:layout_width="150dp"
        android:layout_height="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_amazing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/img_amazing_pic"
        app:layout_constraintStart_toStartOf="@+id/img_amazing_pic"
        app:layout_constraintTop_toBottomOf="@+id/img_amazing_pic"
        tools:text="TextView" />

    <TextView
        android:textColor="#E70303"
        android:id="@+id/txt_amazing_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/txt_amazing_title"
        app:layout_constraintStart_toStartOf="@+id/txt_amazing_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_amazing_title"
        tools:text="TextView" />


    <TextView
        android:id="@+id/txt_amazing_pprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_amazing_price"
        app:layout_constraintStart_toStartOf="@+id/txt_amazing_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_amazing_price"
        tools:text="TextView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ED3347"
        android:text="45%"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_amazing_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_amazing_title" />

</androidx.constraintlayout.widget.ConstraintLayout>