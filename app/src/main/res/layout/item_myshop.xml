<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="10dp"
    android:layout_width="90dp"
    android:layout_height="85dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/shape_myshop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.mydigikala_mac.Utility.ImageView.MyImageview
            android:id="@+id/img_myshop_pic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/txt_myshop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/img_myshop_pic"
            app:layout_constraintStart_toStartOf="@+id/img_myshop_pic"
            app:layout_constraintTop_toBottomOf="@+id/img_myshop_pic" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>